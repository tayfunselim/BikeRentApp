@page "{id:int}"
@model BikeRentApp.Pages.Customer.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<h1>Deleting @Model.Customer.FirstName @Model.Customer.LastName!</h1>
<div class="alert alert-dark">
    Are you sure you want to delete @Model.Customer.FirstName @Model.Customer.LastName?
</div>
<form method="post">
    <button type="submit" class="btn btn-danger">Yes!</button>
    <a asp-page="./List" class="btn btn-outline-dark">Cancel</a>
</form>