@page "{id:int?}"
@model BikeRentApp.Pages.Customer.EditModel
@{
    ViewData["Title"] = "Edit";
}
@if (Model.Customer.Id == 0)
	{
		 <h1>Add new customer</h1>
}
else
{
    <h1>Editing customer: @Model.Customer.FirstName @Model.Customer.LastName</h1>
}

<form method="post">
    <input type="hidden" asp-for="Customer.Id" />
    <div class="form-row">
        <div class="form-group col-sm-6">
            <label asp-for="Customer.FirstName"></label>
            <input class="form-control" placeholder="type here" asp-for="Customer.FirstName" />
            <span class="text-danger" asp-validation-for="Customer.FirstName"></span>
        </div>
        <div class="form-group col-sm-6">
            <label asp-for="Customer.LastName"></label>
            <input class="form-control" placeholder="type here" asp-for="Customer.LastName" />
            <span class="text-danger" asp-validation-for="Customer.LastName"></span>
        </div>
        <div class="form-group col-sm-6">
            <label asp-for="Customer.MembershipId"></label>
            <select class="form-control" asp-for="Customer.MembershipId" asp-items="@Model.Memberships">
                <option value="">Select membership!</option>
            </select>
        </div>
        <div class="form-group col-sm-6">
            <label asp-for="Customer.Email"></label>
            <input type="email" placeholder="name@example.com" class="form-control" asp-for="Customer.Email" />
            <span class="text-danger" asp-validation-for="Customer.Email"></span>
        </div>
        <div class="form-group col-sm-6">
            <label asp-for="Customer.PhoneNumber"></label>
            <input class="form-control" asp-for="Customer.PhoneNumber" />
            <span class="text-danger" asp-validation-for="Customer.PhoneNumber"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="./List" class="btn btn-primary">Back</a>
</form>

