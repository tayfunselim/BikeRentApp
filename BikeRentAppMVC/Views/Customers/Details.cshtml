@model BikeRentApp.Core.Customer
@{
    ViewData["Title"] = "Details";
}

    <div class="card text-center border border-primary" style="width: 25rem;">
        <div class="card-header">
            <h3 class="card-title">Details for customer:</h3>
            <h3>@Model.FirstName @Model.LastName</h3>
        </div>
        <div class="card-body">
            <ul class="list-group list-group-flush">
                <li class="list-group-item">ID: @Model.Id</li>
                <li class="list-group-item">Membership: @Model.Membership.MembershipType</li>
                <li class="list-group-item">Phone number: @Model.PhoneNumber</li>
                <li class="list-group-item">E-mail: @Model.Email</li>
                <li class="list-group-item">City: @Model.City</li>
                <li class="list-group-item">Age: @Model.Age</li>
                <li class="list-group-item">Gender: @Model.Gender</li>
            </ul>
        </div>
        <div class="card-footer">
            <a asp-action="List" class="btn btn-primary">Back</a>
            <a class="btn btn-outline-secondary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
        </div>
    </div>

