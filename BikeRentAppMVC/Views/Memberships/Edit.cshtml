@model BikeRentAppMVC.Models.Memberships.MembershipsEditViewModel
@{
    ViewData["Title"] = "Edit";
}

@if (Model.Membership.Id == 0)
{
    <h1>Create new membership</h1>
}
else
{
    <h1>Editing membership: @Model.Membership.MembershipType</h1>
}

<form method="post">
    <input type="hidden" asp-for="Membership.Id" />
    <div class="form-row">
        <div class="form-group col-sm-12">
            <label asp-for="Membership.MembershipType"></label>
            <input class="form-control" asp-for="Membership.MembershipType" />
            <span class="text-danger" asp-validation-for="Membership.MembershipType"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-sm-6">
            <label asp-for="Membership.DiscountRent"></label>
            <input class="form-control" asp-for="Membership.DiscountRent" />
            <span class="text-danger" asp-validation-for="Membership.DiscountRent"></span>
        </div>
        <div class="form-group col-sm-6">
            <label asp-for="Membership.DiscountBuy"></label>
            <input class="form-control" asp-for="Membership.DiscountBuy" />
            <span class="text-danger" asp-validation-for="Membership.DiscountBuy"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="List" class="btn btn-primary">Back</a>
</form>

